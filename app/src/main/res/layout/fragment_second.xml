<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.SecondFragment">

    <Button
            android:text="Delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/btnDelete"
            app:layout_constraintStart_toEndOf="@+id/btnSave" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@+id/btnSave" android:layout_marginStart="16dp"
            android:backgroundTint="#F44336"/>
    <include layout="@layout/word_item"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             android:id="@+id/layout"/>
    <Button
            android:text="Clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/btnClear"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/layout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnSave" android:backgroundTint="#03A9F4"/>
    <Button
            android:text="Save"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/btnSave"
            app:layout_constraintStart_toEndOf="@+id/btnClear"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnDelete" app:layout_constraintTop_toTopOf="@+id/btnClear"
            android:backgroundTint="#4CAF50"/>

</androidx.constraintlayout.widget.ConstraintLayout>